" Allow nvim to use OS's clipboard
set clipboard+=unnamedplus

" Save undo-trees in files
set undofile
set undodir=$HOME/.config/nvim/undo
" number of undo saved
set undolevels=1000
set undoreload=1000

" Set line number
set number

" Set tabs indenting (set it to 2)
set autoindent
set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2
  
